<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/four"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardBackgroundColor="@android:color/darker_gray"
        card_view:cardElevation="@dimen/twenty"

        android:layout_marginBottom="@dimen/twenty"
        card_view:cardCornerRadius="@dimen/twofive"
        card_view:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_image1"
                android:background="@drawable/logo_adidas"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description1"
                android:text="@string/app_name"
                android:layout_toRightOf="@+id/iv_image1"
                android:layout_alignParentTop="true"

                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>